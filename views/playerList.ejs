<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Player List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
    }
    
    h1 {
      background-color: #333;
      color: white;
      padding: 10px;
    }
    
    form {
      margin: 20px 0;
    }
    
    label {
      font-weight: bold;
    }
    
    input[type="text"] {
      padding: 5px;
      width: 200px;
    }
    
    button[type="submit"] {
      background-color: #333;
      color: white;
      border: none;
      padding: 5px 10px;
      cursor: pointer;
    }
    
    ul {
      list-style-type: none;
      padding: 0;
    }
    
    li {
      margin: 5px 0;
    }
    
    a {
      text-decoration: none;
      color: #333;
    }
    
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <h1>Player List</h1>
  
  <!-- Search Bar -->
  <form action="/players/search" method="GET">
    <label for="search">Search Players by Name:</label>
    <input type="text" id="search" name="name" placeholder="Enter player name">
    <button type="submit">Search</button>
  </form>
  
  <!-- Player List -->
  <ul>
    <% players.forEach(player => { %>
      <li>
        <a href="/players/<%= player.id %>"><%= player.name %></a>
      </li>
    <% }); %>
  </ul>
</body>
</html>
